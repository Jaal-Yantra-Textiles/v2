{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && node deploy-railway.js --mode=$MEDUSA_WORKER_MODE --ci"
  },
  "deploy": {
    "startCommand": "cd .medusa/server && pnpm predeploy && pnpm run start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 500,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
